{
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "CommonJS",          // ← 关键：改回 CommonJS
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    // "emitDeclarationOnly": true, // 如果你需要 JS，就注释掉或删掉
    // "noEmit": true,              // 如果要构建 JS，这个不能是 true
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ESNext",
    // "allowImportingTsExtensions": true, // 不要开这个
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./typings",
    "./typing.d.ts",
    "src/tools/todowrite.ts"
, "test-model.js"  ]
}
